<main>
  <div class = "customer-edit-page">
    <span class = "page-title">
      会員情報編集
    </span>
    <div class = "contents">
      <%= form_with model: @customer, url:customer_path(current_customer.id) do |f| %>
        <table class = "customer-edit-table">
          <tbody>
            <tr>
              <td width = "200px">
                氏名
              </td>
              <td width = "500px">
                <%= f.text_field :last_name %> <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <td>
                フリガナ
              </td>
              <td>
                <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td>
                郵便番号
              </td>
              <td>
                <%= f.text_field :postal_code %>
              </td>
            </tr>
            <tr>
              <td width = "160px">
                住所
              </td>
              <td width = "500px">
                <%= f.text_field :address, size:"60" %>
              </td>
            </tr>
            <tr>
              <td width = "160px">
                電話番号
              </td>
              <td width = "500px">
                <%= f.text_field :telepone_namber %>
              </td>
            </tr>
            <tr>
              <td>
                メールアレス
              </td>
              <td>
                <%= f.email_field :email %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm save-btn" %>
              </td>
              <td>
                <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</main>