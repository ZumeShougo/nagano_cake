<main>
  <div class = "customer-edit-page">
    <span class = "page-title">
      会員情報編集
    </span>
    <div class = "contents">
      <%= form_with midel: @customer, url:customer_path(current_customer.id) do |f| %>
        <table class = "customer-edit-table">
          <tbody>
            <tr>
              <td width = "200px">
                氏名
              </td>
              <td width = "500px">
                <%= f.text_field :last_name %> <%= text_field :first_name %>
              </td>
            </tr>
            <tr>
              <td>
                フリガナ
              </td>
              <td>
                <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td>
                郵便番号
              </td>
              <td>
                <%= f.text_field :postal_code %>
              </td>
            </tr>
            <tr>
              <td width = "160px">
                住所
              </td>
              <td width = "500px">
                <%= f.text_field :address, size:"60" %>
              </td>
            </tr>
            <tr>
              <td width = "160px">
                電話番号
              </td>
              <td width = "500px">
                <%= f.text_field :telepone_namber %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</main>