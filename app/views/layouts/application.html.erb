<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/e84a7fa652.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class = "bg-dark text-white">
    <nav class = "navbar navbar-expand-lg navbar-light">
      <div class = "container">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
           <li class = "nav-item">
             <%= link_to "Home","/admin",class:'fas fa-home nav-link text-light' %>
           </li>
           <li class = "nav-item">
             <%= link_to "Customers", "/admin/customers", class:'fas fa-users nav-link text-light' %>
           </li>
           <li class = "nav-item">
             <%= link_to "Items","/admin/items", class:'fas fa-book-open nav-link text-light' %>
           </li>
           <li class = "nav-item">
             <%= link_to "Genres","/admin/genres", class:'fas fa-book-open nav-link text-light' %>
           </li>
           <li class = "nav-item">
             <%= link_to "Log out",destroy_admin_session_path,method: :delete, class:'fas fa-sign-out-alt nav-link text-light' %>
           </li>
          <% else %>
           <li class = "nav-item">
             <%= link_to "Log in","/admin/sign_in", class:'fas fa-sign-in-alt nav-link text-light' %>
           </li>
          <% end %>
        </ul>
      </div>

      </div>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
