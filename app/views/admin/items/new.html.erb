<div class = 'container'>
  <div class = 'row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>商品登録</h1>
      <%= form_with model:@item, local:true do |f| %>
        <div class="form-group has-icon">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group has-icon">
          <%= f.label :name, "商品説明" %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form-group has-icon">
          <%= f.label :image, "商品画像" %><br>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group has-icon">
          <%= f.label :genre_id, "商品種別" %><br>
          <%= f.select :genre_id, [["ケーキ", "1"], ["ジュース", "2"]], include_blank: "選択して下さい" %>
        </div>
        <div class="form-group has-icon">
          <%= f.label :price, "値段(税抜き)" %>
          <%= f.text_field :price, class:"form-control" %>
        </div>
        <div class="form-group has-icon">
          <%= f.radio_button :is_active, :on_sale, checked: "checked"%>
          <%= f.label :is_active, "有効", {value: :"0", style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :off_sale %>
          <%= f.label :is_active, "無効", {value: :"1", style: "display: inline-block;"} %>
        </div>
        <%= f.submit "この内容で登録する", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
      <% end %>
    </div>
  </div>
</div>