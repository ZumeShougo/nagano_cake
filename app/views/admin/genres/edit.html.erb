<main>
  <div class="genre-index-page">
    <span class="page-title">　ジャンル編集　</span>
    <div class="contents">
      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
      <table>
        <tbody>
          <th width="150px">ジャンル名</th>
          <th width="250px"><%= f.text_field :name %></th>
          <th width="200px"><%= f.submit "　変更を保存　" ,class: "btn btn-success" %></th>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</main>