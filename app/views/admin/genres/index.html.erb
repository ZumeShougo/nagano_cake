<main>
  <div class="genre-index-page">
    <span class="page-title">　ジャンル一覧・追加　</span>
    <div class="contents">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table class="genre-add-table">
        <tbody>
          <th width="150px">ジャンル名</th>
          <th width="250px"><%= f.text_field :name %></th>
          <th width="200px"><%= f.submit "　新規登録　" ,class: "btn btn-success" %></th>
        </tbody>
      </table>
      <% end %>
    <div class="genre-table">
      <table class="table">
        <thead bgcolor="#EEEEEE">
          <th width="150px">ジャンル</th>
          <th width="50px"></th>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <td><%= genre.name %></td>
          <td><%= link_to "　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
        </tbody>
        <% end %>
      </table>
    </div>
    </div>
  </div>
</main>